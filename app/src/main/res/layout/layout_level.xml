<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/easyChoice"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="easy 3x3"
        android:textColor="#90ffce"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:textColor="#90ffce"
        android:id="@+id/mediumChoice"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:text="medium 4x4"
        app:layout_constraintBottom_toBottomOf="@+id/easyChoice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/hardChoice"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/transparent"
        android:text="hard 5x5"
        android:textColor="#90ffce"
        app:layout_constraintBottom_toBottomOf="@+id/easyChoice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:layout_marginBottom="0dp"
        android:id="@+id/extremeChoice"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="300dp"
        android:background="@android:color/transparent"
        android:text="extreme 6x6"
        android:textColor="#90ffce"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/easyChoice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>